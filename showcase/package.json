{
  "name": "xapt-showcase",
  "version": "1.0.0",
  "description": "xAPT SDK Showcase: Smart Saving and Spending Wallet Implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "node test-showcase.js",
    "clean": "rm -rf dist",
    "server": "node dist/server.js",
    "client": "node dist/client.js",
    "demo": "node dist/demo.js",
    "test:showcase": "node test-showcase.js",
    "real-demo": "node dist/realBlockchainDemo.js",
    "real-blockchain-demo": "node dist/realBlockchainDemo.js",
    "mock-blockchain-demo": "node dist/mockBlockchainDemo.js",
    "facilitator": "node dist/server/simpleFacilitator.js",
    "full-real-demo": "npm run facilitator & npm run server & sleep 5 && npm run real-demo",
    "full-real-blockchain-demo": "npm run facilitator & npm run server & sleep 5 && npm run real-blockchain-demo",
    "full-mock-blockchain-demo": "npm run facilitator & npm run server & sleep 5 && npm run mock-blockchain-demo",
    "mainnet-demo": "NETWORK=mainnet npm run facilitator & NETWORK=mainnet npm run server & sleep 5 && NETWORK=mainnet npm run real-blockchain-demo",
    "test:watch": "jest --watch",
    "auto-refill": "node auto-refill-daemon.js",
    "auto-refill-mainnet": "NETWORK=mainnet node auto-refill-daemon.js"
  },
  "keywords": [
    "xapt",
    "aptos",
    "usdc",
    "payments",
    "showcase",
    "wallet",
    "smart-wallet"
  ],
  "author": "xAPT Team",
  "license": "MIT",
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.39.0",
    "@xapt/client": "^1.1.0",
    "@xapt/common": "^1.1.0",
    "@xapt/server": "^1.1.0",
    "aptos": "^1.21.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
